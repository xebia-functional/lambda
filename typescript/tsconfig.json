{
	"compilerOptions": {
		"target": "ESNext",
		"strict": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false,
		"isolatedModules": true,
		"outDir": "dist",
	},
	"exclude": ["*/node_modules"]
}
